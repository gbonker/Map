<%= simple_form_for(@village, html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
      <legend><%= controller.action_name.capitalize %> Village</legend>
      <%= f.input :name %>
      <%= f.input :latitude %>

      <%= f.input :longitude %>
    <%= f.input :state %>
    <%= f.input :district %>
    <%= f.input :taluka %>
    <%= f.input :active %>
    <div class="form-actions">
      <%= f.submit nil, class: 'button' %>
      <%= link_to 'Cancel', villages_path, :class => 'button secondary' %>
    </div>

    </fieldset>
<% end %>
