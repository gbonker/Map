<%= simple_form_for(@village, html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
    <%= f.input :name, label: "Village" %>
    <%= f.input :taluka %>
    <%= f.input :district %>
    <%= f.input :state %>
    
    
    <%= f.input :active %>
    <div class="form-actions">
      <%= f.submit nil, class: 'button' %>
      <%= link_to 'Cancel', villages_path, :class => 'button secondary' %>
    </div>

    </fieldset>
<% end %>
