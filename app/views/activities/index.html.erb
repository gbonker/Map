<h2>Listing Activities</h2>

<%= link_to "Add a New Activity", new_activity_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= link_to activity.name, activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity), class: "button tiny radius" %></td>
    <% end %>
  </tbody>
</table>

<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @activities, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />

